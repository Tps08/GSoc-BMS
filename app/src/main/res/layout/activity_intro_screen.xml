<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#E6E6FA"
    android:padding="18dp"
    tools:context=".IntroScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="#000000"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp">


                <ImageView

                    android:layout_width="184dp"
                    android:layout_height="200dp"
                    android:src="@drawable/gsocbmslogo"
                    android:contentDescription="TODO" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:text="Welcome to Grievances SOCiety of BMSITM"
                android:textAlignment="center"
                android:textColor="#0049FF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ToAdminBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="19dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:paddingVertical="16dp"
                android:text="ENTER AS ADMIN"
                android:textAllCaps="false"
                android:textColor="#FDD835"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ToStudentBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="19dp"
                android:background="@color/black"
                android:paddingVertical="16dp"
                android:text="ENTER AS STUDENT"
                android:textAllCaps="false"
                android:textColor="#FDD835"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>