<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#fff"
    tools:context=".login_admin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@color/black"
                android:title="@string/gsocbms"
                android:titleTextColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="m" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/bmsitlogo"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:text="Admin Login"
                android:textColor="@color/black"
                android:textSize="38sp" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail Id:"
                    android:gravity="left"
                    android:layout_marginHorizontal="18dp"
                    android:layout_gravity="start"
                    android:textSize="22sp"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/progressBar2_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="visible"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:indeterminateTint="@color/MainColord"
                    android:indeterminateTintMode="src_atop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <EditText
                android:id="@+id/email_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:hint="Enter your e-mail id"
                android:padding="14dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_round"
                android:autofillHints="" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginHorizontal="18dp"
                android:layout_gravity="start"
                android:textSize="22sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/password_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:hint="Enter your password"
                android:padding="14dp"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_round"
                android:autofillHints="" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginBtc_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="17dp"
                android:background="@color/black"
                android:paddingVertical="16dp"
                android:text="Log In"
                android:textAllCaps="false"
                android:textColor="#FDD835"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TosignPage"
                android:layout_marginTop="29dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't have an account? SIGN UP"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="19sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>